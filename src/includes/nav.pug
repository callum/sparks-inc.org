mixin link(href)
  a(href=pageUrl(href), class={ 'is-current': filename === href })&attributes(attributes)
    block

nav.nav.js-nav
  header.nav__header
    div.nav__container
      button.nav__toggle.js-nav-toggle Menu
  div.nav__main
    div.nav__container
      ul.nav__items
        li.nav__item.nav__item--home
          +link('index.pug').nav__link Home
        li.nav__item.nav__item--about.js-nav-item
          +link('about/index.pug').nav__link.js-nav-link About Sparks
          ul.nav__sub-items
            li.nav__sub-item
              +link('about/index.pug').nav__sub-link.js-nav-sub-link About Sparks
            li.nav__sub-item
              +link('about/team.pug').nav__sub-link.js-nav-sub-link Meet our team
            li.nav__sub-item
              +link('about/registration-booking.pug').nav__sub-link.js-nav-sub-link Registration & booking
            li.nav__sub-item
              +link('about/registration-booking.pug#howtopay').nav__sub-link.js-nav-sub-link How to pay
            li.nav__sub-item
              +link('about/policies-procedures/index.pug').nav__sub-link.js-nav-sub-link Policies & procedures
            li.nav__sub-item
              +link('about/terms.pug').nav__sub-link.js-nav-sub-link Terms & conditions
        li.nav__item.nav__item--clubs.js-nav-item
