            thead
              tr
                th Term
                th Starts
                th Ends
            tbody
              tr
                td Term 1
                td Monday 2 September 2019
                td Friday 25 October 2019
              tr
                td Term 2
                td Monday 4 November 2019
                td Friday 20 December 2019
              tr
                td Term 3
                td Monday 6 January 2020
                td Friday 14 February 2020
              tr
                td Term 4
                td Monday 24 February 2020
                td Friday 3 April 2020
              tr
